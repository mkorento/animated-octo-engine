<!DOCTYPE html>
<html>
    <head>
        <title>PhotoApp</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <link rel="stylesheet" type="text/css" href="assets/custom.css">
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
    </head>

    <body>
        <ul id="navbar">
            <li id="navbar"><a class="brand active" href="<%= images_path %>">Photo app!</a></li>
            <li id="navbar"><a href="<%= new_image_path %>">Upload image</span></a></li>

        </ul>

        <div class="container">
            <div class="row">
                <div class="col-xs-12" style="height:20px;"></div>
            </div>
        </div>

        <% if !notice.nil? %>
            <p class="text-center" id="notice"><%= notice %></p>
        <% end %>

        <%= yield %>

    </body>
</html>


