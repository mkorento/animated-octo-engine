<div class="container">
    <%= form_for @image, {:multipart => true} do |f| %>
        <div class="row">
            <% if @image.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</h2>

                    <ul>
                        <% @image.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <%= f.file_field :file %>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12" style="height:20px;"></div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <%= f.label :name, 'Title ' %><br>
                <%= f.text_field :name, size: '25' %>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12" style="height:20px;"></div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <%= f.label 'Description' %><br>
                <%= f.text_area :description, size: '50x2' %>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12" style="height:20px;"></div>
        </div>

        <div class="actions">
            <%= f.submit 'Upload' %>
        </div>
    <% end %>
</div>
